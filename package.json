{
  "name": "pranayama-test",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npm run build:scss && npm run build:js && npm run build:html",
    "build:scss": "sass src/scss/main.scss dist/assets/app.css --style=compressed",
    "build:js": "esbuild src/js/app.js --bundle --outfile=dist/assets/app.js --minify",
    "build:html": "node src/build.js",
    "watch": "concurrently \"npm run watch:scss\" \"npm run watch:js\" \"npm run watch:html\"",
    "watch:scss": "sass src/scss/main.scss dist/assets/app.css --watch",
    "watch:js": "esbuild src/js/app.js --bundle --outfile=dist/assets/app.js --watch",
    "watch:html": "node src/build.js --watch"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "sass": "^1.69.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=14"
  }
}
